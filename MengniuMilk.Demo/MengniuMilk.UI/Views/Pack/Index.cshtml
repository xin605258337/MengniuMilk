
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PackIndex</title>
    <script src="~/Scripts/axios.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <link href="~/bootstrap-3.3.7-dist/bootstrap337/css/bootstrap.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
</head>
<body>
    <div>
        <h3>包装质检信息</h3>
    </div>
    <div id="app" class="div-td">
        <table v-show="list.length" class="table table-striped" border="1">
            <tr>
                <th>编号</th>
                <th>样品ID</th>
                <th>样品名称</th>
                <th>质检计划名称</th>
                <th>质检类型</th>
                <th>质检结果录入</th>
                <th>编辑</th>
            </tr>
            <tr v-for="item in list ">
                <td>{{item.PackID}}</td>
                <td>{{item.ID}}</td>
                <td>{{item.Name}}</td>
                <td>
                    {{item.QCPlanName}}
                </td>
                <td>
                    {{item.Type_Name}}
                </td>
                <td>
                    <input v-on:click="GoAddIndex(item.ID,item.QCtaskID)" type="button" value="质检结果录入" />
                </td>
                <td>
                    <div v-if="item.ID!=''">
                        <a href="#" v-on:click="DelPack(item.PackID)">删除</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            ResultValue:"",
            QCPlanType: [],
            TargetType: [],
            list: [],

        },
        mounted() {
            this.getQCPlanType();
            this.getTargetType();
            this.getList();
        },
        methods: {
            //获取质检结果明细
            getQCResultList: function () {
                axios.get('http://localhost:8103/GetQCResultLists?sampleId=' + this.sampleID + '&qcTaskID=' + this.qcPlanId).then(
                    (response) => {
                        this.QCResultList = [];
                        for (var i = 0; i < response.data.length; i++) {
                            this.QCResultList.push(response.data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status + "1");
                    }
                ).catch(function (response) {
                    alert(response);
                });

            },

            //获取质检类型表
            getQCPlanType: function () {
                axios.get('http://localhost:8103/GetQCPlanTypes').then(
                    (response) => {
                        this.QCPlanType = [];
                        for (var i = 0; i < response.data.length; i++) {
                            this.QCPlanType.push(response.data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status + "1");
                    }
                ).catch(function (response) {
                    alert(response);
                });

            },
            //页面跳转并传采样品ID
            GoAddIndex: function (ID, Id) {
                location.href = "/QCResultList/Index?id=" + ID + "&qcPlanId=" + Id;
            },
            ////页面跳转并传采样品ID
            //GoAddIndex: function (ID, Id) {
            //    this.sampleID = ID;
            //    this.qcPlanId = Id;
            //    this.getQCResultList();
            //},
            //获取指标分类表
            getTargetType: function () {
                axios.get('http://localhost:8103/GetTargetTypes').then(
                    (response) => {
                        this.TargetType = [];
                        for (var i = 0; i < response.data.length; i++) {
                            this.TargetType.push(response.data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });

            },
            //获取包装质检信息
            getList: function () {
                axios.get('http://localhost:8103/GetPack').then((response) => {
                    this.list = [];
                    for (var i = 0; i < response.data.length; i++) {
                        this.list.push(response.data[i]);
                    }
                },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            //删除包装质检信息
            DelPack: function (Id) {
                axios.get('http://localhost:8103/DeletePack?id=' + Id).then((respose) => {
                    if (respose.data > 0) {
                        alert("删除成功!!!");
                        this.getList();
                    }
                },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },

        },

    })
</script>
