
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SampleAdd</title>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/axios.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <link href="~/bootstrap-3.3.7-dist/bootstrap337/css/bootstrap.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
</head>
<body>
    <div>
        <div style="margin-left:300px">
            <h3>采样表添加页面</h3>
        </div>
        <div id="add" style="margin-left:300px">
            <table class="table table-bordered table-hover" style="width:500px">
                <tr>
                    <td>样品名称:</td>
                    <td><input type="text" v-model="Name" /></td>
                </tr>
               
                <tr>
                    <td><input type="button" href="javascript:;" v-on:click="AddSample(Name,Code)" class="btn btn-info" value="添加"/></td>
                    <td>
                        <input type="button" value="显示列表" class="btn btn-danger" onclick="location.href='/Sample/SampleIndex'"/>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">



    var vm = new Vue({
        el: "#add",
        data: {
            Name: "",
           Code:""
            
        },
        mounted() {
           
        },
        methods: {
           

            AddSample: function (Name, Code) {
                var params = new URLSearchParams();
                params.append("Name", Name);
                params.append("Code", Code);
                axios.post('http://localhost:8103/AddSample', params).then(
                    (response) => {
                       
                        location.href ="/Sample/SampleIndex"

                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });

            }

        }

    })

</script>
