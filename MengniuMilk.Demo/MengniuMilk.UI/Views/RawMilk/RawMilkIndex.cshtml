
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RawMilkIndex</title>
    <script src="~/Scripts/axios.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <link href="~/bootstrap-3.3.7-dist/bootstrap337/css/bootstrap.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
</head>
<body>
    <div>
        <h3>生乳质检信息</h3>
    </div>
    <div id="app" class="div-td">
        <table v-show="list.length" class="table table-striped" border="1">
            <tr>
                <th>样品ID</th>
                <th>样品名称</th>
                <th>质检计划名称</th>
                <th>质检类型</th>
                <th>录入检验结果</th>
                <th>编辑</th>
            </tr>
            <tr v-for="item in list ">
                <td>{{item.ID}}</td>
                <td>{{item.Name}}</td>
                <td>
                    {{item.QCPlanName}}
                </td>
                <td>
                    {{item.Type_Name}}
                </td>              
                <td>
                    <input  v-on:click="GoAddIndex(item.ID,item.QCPlan_ID)" type="button" value="质检结果录入" />
                </td>
                <td>
                    <div v-if="item.ID!=''">
                        <a href="#" v-on:click="UptRawMilk(item.ID,item.ResultValue,item.StandardValuesMax,item.StandardValuesMin)">保存</a>
                        <a href="#" v-on:click="DelRawMilk(item.ID)">删除</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            ResultValue:"",
            QCPlanType: [],
            TargetType: [],
            list: [],
            
        },
        mounted() {
            this.getQCPlanType();
            this.getTargetType();
            this.getList();
        },
        methods: {
           
            //获取质检类型表
            getQCPlanType: function () {
                axios.get('http://localhost:8103/GetQCPlanTypes').then(
                    (response) => {
                        this.QCPlanType = [];
                        for (var i = 0; i < response.data.length; i++) {
                            this.QCPlanType.push(response.data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status + "1");
                    }
                ).catch(function (response) {
                    alert(response);
                });

            },
            //页面跳转并传采样品ID
            GoAddIndex: function (ID, Id) {
                location.href = "/QCResultList/Index?id=" + ID + "&qcPlanId=" + Id;
            },
            //获取指标分类表
            getTargetType: function () {
                axios.get('http://localhost:8103/GetTargetTypes').then(
                    (response) => {
                        this.TargetType = [];
                        for (var i = 0; i < response.data.length; i++) {
                            this.TargetType.push(response.data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });

            },
            //获取生乳质检信息
            getList: function () {
                axios.get('http://localhost:8103/GetRawMilks').then((response) => {
                    this.list = [];
                    for (var i = 0; i < response.data.length; i++) {
                        this.list.push(response.data[i]);
                    }
                },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            //删除生乳质检信息
            DelRawMilk: function (Id) {
                axios.get('http://localhost:8103/DelRawMilk?id=' + Id).then((respose) => {
                    if (respose.data > 0) {
                        alert("删除成功!!!");
                        this.getList();
                    }
                },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            //修改生乳质检信息
            UptRawMilk: function (Id, ResultValue, max, min) {
                var state = 0;
                if (ResultValue <= max && ResultValue >= min) {
                    state = 1;
                    axios.post('http://localhost:8103/ChangeState?id=' + Id).then(
                        (response) => {
                            console.log(response.data);
                            if (response.data > 0) {
                                alert("状态已更改!!!");
                               

                            }
                        },
                        (response) => {
                            alert(response.status);
                        }
                    ).catch(function (response) {
                        alert(response);
                        });
                    axios.post('http://localhost:8103/AddResult?id=' + Id).then(
                        (response) => {
                            console.log(response.data);
                            if (response.data > 0) {
                                alert("已发送!!!");
                            }
                        },
                        (response) => {
                            alert(response.status);
                        }
                    ).catch(function (response) {
                        alert(response);
                    });
                }
                else {
                    state = 2;
                    axios.post('http://localhost:8103/ChangeState?id=' + Id).then(
                        (response) => {
                            console.log(response.data);
                            if (response.data > 0) {
                                alert("状态已更改!!!");                              

                            }
                        },
                        (response) => {
                            alert(response.status);
                        }
                    ).catch(function (response) {
                        alert(response);
                        });
                    axios.post('http://localhost:8103/AddResult?id=' + Id).then(
                        (response) => {
                            console.log(response.data);
                            if (response.data > 0) {
                                alert("已发送!!!");
                            }
                        },
                        (response) => {
                            alert(response.status);
                        }
                    ).catch(function (response) {
                        alert(response);
                    });
                }
                var params = new URLSearchParams();
                params.append('ID', Id);
                params.append('ResultValue', ResultValue);
                params.append('State', state);                
                axios.post('http://localhost:8103/UptRawMilk', params).then(
                    (response) => {
                        console.log(response.data);
                        if (response.data > 0) {
                            alert("保存成功!!!");
                            this.getList();

                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },

        },

    })
</script>
