
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RawMilkIndex</title>
    <script src="~/Scripts/axios.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <link href="~/bootstrap-3.3.7-dist/bootstrap337/css/bootstrap.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
</head>
<body>
    <div>
        <h3>生乳质检信息</h3>
    </div>
    <div id="app" class="div-td">
        <table v-show="list.length" class="table table-striped" border="1">
            <tr>
                <th>样品名称</th>
                <th>质检计划名称</th>
                <th>质检类型</th>
                <th>检验结果值</th>
                <th>指标项分类</th>
                <th>指标项名称</th>
                <th>标准值</th>
                <th>标准值上限</th>
                <th>标准值下限</th>
                <th>状态</th>
                <th>编辑</th>
            </tr>
            <tr v-for="item in list ">
                <td>{{item.Name}}</td>
                <td>
                    {{item.QCPlanName}}
                </td>
                <td>
                    <select id="Select1" v-model="item.Type_ID">
                        <option value="请选择">--请选择--</option>
                        <option v-for="type in QCPlanType" v-bind:value="type.Type_ID">{{type.Type_Name}}</option>
                    </select>
                </td>
                <td>
                    <input id="Text1" type="text" v-model="item.ResultValue" />
                </td>
                <td>
                    <select id="Select5" v-model="item.TargetType_ID">
                        <option value="请选择">--请选择--</option>
                        <option v-for="targettype in TargetType" v-bind:value="targettype.TargetType_ID">{{targettype.TargetType_Name}}</option>

                    </select>
                </td>
                <td>
                    {{item.Target_Name}}
                </td>
                <td>{{item.StandardValues}}</td>
                <td>{{item.StandardValuesMax}}</td>
                <td>{{item.StandardValuesMin}}</td>
                <td>
                    <input id="Radio1" type="radio" v-model="item.State" value="1" />已检验
                    <input id="Radio1" type="radio" v-model="item.State" value="0" />未检验
                </td>
                <td>
                    <div v-if="item.ID!=''">                        
                        <a href="#" v-on:click="UptRawMilk(item.ID,item.ResultValue,item.State)">保存</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            QCPlanType: [],
            TargetType: [],
            list: [],
        },
        mounted() {
            this.getQCPlanType();
            this.getTargetType();
            this.getList();
        },
        methods: {
            //获取质检类型表
            getQCPlanType: function () {
                axios.get('http://localhost:8103/GetQCPlanTypes').then(
                    (response) => {
                        this.QCPlanType = [];
                        for (var i = 0; i < response.data.length; i++) {
                            this.QCPlanType.push(response.data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status + "1");
                    }
                ).catch(function (response) {
                    alert(response);
                });

            },
            //获取指标分类表
            getTargetType: function () {
                axios.get('http://localhost:8103/GetTargetTypes').then(
                    (response) => {
                        this.TargetType = [];
                        for (var i = 0; i < response.data.length; i++) {
                            this.TargetType.push(response.data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });

            },
            //获取生乳质检信息
            getList: function () {
                axios.get('http://localhost:8103/GetRawMilks').then((response) => {
                    this.list = [];
                    for (var i = 0; i < response.data.length; i++) {
                        this.list.push(response.data[i]);
                    }
                },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            //删除生乳质检信息
            DelRawMilk: function (Id) {
                axios.get('http://localhost:8103/DeleteQCPlan?id=' + Id).then((respose) => {
                    if (respose.data > 0) {
                        alert("删除成功!!!");
                        this.getList();
                    }
                },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            //修改生乳质检信息
            UptRawMilk: function (Id, ResultValue,State) {
                var params = new URLSearchParams();
                params.append('ID', Id);
                params.append('ResultValue', ResultValue);
                params.append('State', State);
                axios.post('http://localhost:8103/UptRawMilk', params).then(
                    (response) => {
                        console.log(response.data);
                        if (response.data > 0) {
                            alert("修改成功!!!");
                            this.getList();
                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },

        },

    })
</script>
